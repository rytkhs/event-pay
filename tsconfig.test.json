{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["./core/*"],
      "@core/domain/*": ["./core/domain/*"],
      "@core/actions/*": ["./core/actions/*"],
      "@features/*": ["./features/*"],
      "@components/*": ["./components/*"],
      "@/types/*": ["./types/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "cloudflare-env.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "core/**/*.ts",
    "core/**/*.tsx",
    "features/**/*.ts",
    "features/**/*.tsx",
    "types/**/*.ts"
  ],
  "exclude": []
}
