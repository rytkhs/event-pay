{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    ".": {
      "entry": [
        "app/**/page.{ts,tsx}",
        "app/**/layout.tsx",
        "app/**/route.{ts,tsx}",
        "app/**/actions/**/*.{ts,tsx}",
        "app/**/*/actions.{ts,tsx}"
      ],
      "project": [
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}",
        "hooks/**/*.{ts,tsx}",
        "types/**/*.{ts,tsx}",
        "supabase/functions/**/*.{ts,tsx}"
      ],
      "ignore": ["types/database.ts", "supabase/functions/**/*", "lib/invoice/templates.ts"],
      "ignoreBinaries": ["stripe", "tsx"],
      "ignoreExports": {
        "components/errors/index.ts": ["*"],
        "components/stripe-connect/index.ts": ["*"],
        "lib/security/index.ts": ["*"],
        "lib/logging/app-logger.ts": ["EventPayLogFields"],
        "lib/services/fee-config/application-fee-calculator.ts": ["ApplicationFeeCalculation"],
        "lib/utils/timezone.ts": ["DateFormatType", "formatUtcToJstByType"],
        "**/index.ts": ["*"],
        "**/index.tsx": ["*"]
      }
    }
  }
}
