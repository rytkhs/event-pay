{
  "root": true,
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "rules": {
    "@typescript-eslint/no-explicit-any": ["warn"],
    "import/no-restricted-paths": ["error", {
      "zones": [
        {"target": "./features/*", "from": "./features/*", "except": ["./features/$1/**"]},
        {"target": "./core/**", "from": "./features/**", "allowSameFolder": true},
        {"target": "./core/**", "from": "./app/**", "allowSameFolder": true}
      ]
    }]
  }
}
