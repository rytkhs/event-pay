{
  "name": "eventpay-nextjs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "FORCE_COLOR=true next dev | pino-pretty -tc",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir app --dir components --dir core --dir features --dir types",
    "lint:fix": "next lint --fix --dir app --dir components --dir core --dir features --dir types",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "check:enum-consistency": "tsx scripts/check-enum-consistency.ts",
    "check:all": "npm run lint && npm run typecheck && npm run test:unit",
    "prepare": "husky",
    "db:reset": "npx supabase db reset",
    "db:migrate": "npx supabase migration up",
    "db:seed": "npx supabase seed reset",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "test:unit": "jest --config=jest.config.mjs --passWithNoTests --runInBand",
    "test:e2e": "playwright test",
    "test": "npm run test:unit && npm run test:e2e",
    "test:ci": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "2.43.6",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.35.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.523.0",
    "next": "^14.2.30",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.59.0",
    "resend": "^4.8.0",
    "stripe": "^15.0.0",
    "supabase": "^2.34.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.67"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "next lint --fix --file",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@jest/transform": "^30.1.2",
    "@playwright/test": "^1.47.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.1",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-util": "^30.0.5",
    "lint-staged": "^16.1.6",
    "postcss": "^8",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.6.1",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5"
  }
}
