{
  "name": "event-pay",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "FORCE_COLOR=true next dev --turbopack",
    "build": "NODE_OPTIONS=\"--max-old-space-size=4096\" next build",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy -- --keep-vars --outdir dist --upload-source-maps --var SENTRY_RELEASE:$(sentry-cli releases propose-version)",
    "deploy:demo": "opennextjs-cloudflare deploy --env demo --keep-vars",
    "upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "cf:deploy": "opennextjs-cloudflare deploy -- --keep-vars --outdir dist --upload-source-maps --var SENTRY_RELEASE:$(sentry-cli releases propose-version) && npm run sentry:sourcemaps",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "start": "next start",
    "lint": "next lint --fix --dir app --dir components --dir core --dir features --dir types",
    "lint:fix": "next lint --fix --dir app --dir components --dir core --dir features --dir types",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "NODE_OPTIONS=\"--max-old-space-size=4096\" tsc --noEmit",
    "typecheck:test": "NODE_OPTIONS=\"--max-old-space-size=4096\" tsc -p tsconfig.test.json --noEmit",
    "typecheck:all": "npm run typecheck && npm run typecheck:test",
    "check:enum-consistency": "tsx scripts/check-enum-consistency.ts",
    "check:all": "npm run lint && npm run typecheck:all && npm run test:unit",
    "prepare": "husky",
    "db:reset": "npx supabase db reset",
    "db:migrate": "npx supabase migration up",
    "db:seed": "npx supabase seed reset",
    "stripe:listen": "stripe listen --forward-to http://localhost:3000/api/webhooks/stripe --forward-connect-to http://localhost:3000/api/webhooks/stripe-connect",
    "stripe:listen:prod": "stripe listen --forward-to https://minnano-shukin.com/api/webhooks/stripe --forward-connect-to https://minnano-shukin.com/api/webhooks/stripe-connect",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "FORCE_COLOR=true jest --config=jest.config.mjs --selectProjects unit --runInBand --colors",
    "test:unit:watch": "FORCE_COLOR=true jest --config=jest.config.mjs --selectProjects unit --watch --runInBand --colors",
    "test:unit:coverage": "FORCE_COLOR=true jest --config=jest.config.mjs --selectProjects unit --coverage --runInBand --colors",
    "test:integration": "FORCE_COLOR=true jest --config=jest.config.mjs --selectProjects integration --passWithNoTests --runInBand --colors",
    "test:integration:watch": "FORCE_COLOR=true jest --config=jest.config.mjs --selectProjects integration --watch --runInBand --colors",
    "test:integration:coverage": "FORCE_COLOR=true jest --config=jest.config.mjs --selectProjects integration --coverage --runInBand --colors",
    "test:e2e": "NODE_OPTIONS=\"--conditions=react-server\" playwright test",
    "test:e2e:headed": "NODE_OPTIONS=\"--conditions=react-server\" playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "npm run test:unit:coverage && npm run test:integration:coverage",
    "test:setup": "npx supabase db reset --local && echo 'Test environment ready'",
    "test:with-server": "PLAYWRIGHT_START_SERVER=1 npm run test:e2e",
    "test:payments": "FORCE_COLOR=true jest --config=jest.config.mjs --selectProjects unit --testPathPattern=payments --runInBand --colors",
    "sentry:sourcemaps": "_SENTRY_RELEASE=$(sentry-cli releases propose-version) && sentry-cli releases new $_SENTRY_RELEASE --org=tkhs --project=event-pay && sentry-cli sourcemaps upload --org=tkhs --project=event-pay --release=$_SENTRY_RELEASE --strip-prefix 'dist/..' dist",
    "postdeploy": "npm run sentry:sourcemaps"
  },
  "dependencies": {
    "@11ty/gray-matter": "^2.0.1",
    "@faker-js/faker": "^10.3.0",
    "@hookform/resolvers": "^5.2.2",
    "@next/third-parties": "15.5.12",
    "@opennextjs/cloudflare": "^1.17.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/cloudflare": "^10.40.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.98.0",
    "@tanstack/react-table": "^8.21.3",
    "@upstash/qstash": "^2.9.0",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.575.0",
    "next": "15.5.12",
    "react": "19.2.4",
    "react-day-picker": "^9.14.0",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.2",
    "recharts": "^2.15.4",
    "resend": "^6.9.2",
    "sanitize-html": "^2.17.1",
    "schema-dts": "^1.1.5",
    "stripe": "^19.3.1",
    "tailwind-merge": "^3.5.0",
    "tailwindcss-animate": "^1.0.7",
    "unified": "^11.0.5",
    "vaul": "^1.1.2",
    "zod": "^3.25.76"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "next lint --fix --file",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@jest/transform": "^30.2.0",
    "@next/bundle-analyzer": "15.5.12",
    "@playwright/test": "^1.58.2",
    "@sentry/cli": "^2.58.5",
    "@tailwindcss/typography": "0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.35",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.27",
    "dotenv": "^17.3.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.5.12",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.4.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jest-util": "^30.2.0",
    "jsdom": "^28.1.0",
    "knip": "^5.85.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.8.1",
    "rehype-sanitize": "6.0.0",
    "rehype-stringify": "10.0.1",
    "remark": "15.0.1",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.1",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.2",
    "server-only": "^0.0.1",
    "shadcn": "^3.8.5",
    "supabase": "^2.76.15",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "undici": "^7.22.0",
    "wrangler": "^4.69.0"
  },
  "overrides": {
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3"
  }
}
