{
  "name": "eventpay-nextjs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "jest --config jest.config.mjs",
    "test:integration": "TEST_TYPE=integration jest --config jest.config.mjs --testPathPattern=integration",
    "test:unit": "jest --config jest.config.mjs --testPathIgnorePatterns=integration --testPathIgnorePatterns=security",
    "test:dev": "jest --config jest.config.mjs --testPathPattern='(components|lib|calculations|utils|examples)' --testPathIgnorePatterns=integration --watch",
    "test:ci": "jest --config jest.config.mjs --coverage",
    "test:full": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:e2e",
    "test:watch": "jest --config jest.config.mjs --watch",
    "test:coverage": "jest --config jest.config.mjs --coverage",
    "test:security": "jest --config jest.config.mjs --testPathPattern=security",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:performance": "playwright test --config=playwright.config.performance.ts",
    "check:enum-consistency": "tsx scripts/check-enum-consistency.ts",
    "db:reset": "npx supabase db reset",
    "db:migrate": "npx supabase migration up",
    "db:seed": "npx supabase seed reset",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.0",
    "@types/stripe-v3": "^3.1.33",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.35.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "iron-session": "^8.0.4",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.523.0",
    "next": "^14.2.30",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.59.0",
    "resend": "^4.8.0",
    "stripe": "^18.4.0",
    "supabase": "^2.34.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.67",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.53.2",
    "@swc/jest": "^0.2.38",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.19.1",
    "@types/pino": "^7.0.4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "babel-jest": "^30.0.2",
    "bcrypt": "^6.0.0",
    "cross-fetch": "^4.1.0",
    "dompurify": "^3.2.6",
    "dotenv": "^16.6.1",
    "eslint": "^8",
    "eslint-config-next": "^14.2.30",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.2",
    "jest-environment-node": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8",
    "prettier": "^3.6.1",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  }
}
