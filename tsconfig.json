{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["./core/*"],
      "@core/domain/*": ["./core/domain/*"],
      "@core/actions/*": ["./core/actions/*"],
      "@features/*": ["./features/*"],
      "@components/*": ["./components/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "cloudflare-env.d.ts",
    ".next/types/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "core/**/*.ts",
    "core/**/*.tsx",
    "emails/**/*.ts",
    "emails/**/*.tsx",
    "features/**/*.ts",
    "features/**/*.tsx",
    "types/**/*.ts",
    "middleware.ts",
    "sentry-worker.ts"
  ],
  "exclude": ["node_modules", "tests/**", "**/*.test.ts", "**/*.test.tsx", "supabase/functions/**"]
}
