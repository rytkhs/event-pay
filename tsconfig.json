{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@core/*": [
        "./core/*"
      ],
      "@features/*": [
        "./features/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@/lib/*": [
        "./core/*",
        "./lib/*"
      ],
      "@/components/auth/*": [
        "./features/auth/components/*"
      ],
      "@/components/events/*": [
        "./features/events/components/*"
      ],
      "@/components/stripe-connect/*": [
        "./features/stripe-connect/components/*"
      ],
      "@/components/settlement-report/*": [
        "./features/settlements/components/*"
      ],
      "@/components/common/*": [
        "./features/payments/components/*"
      ],
      "@features/payments/services/*": [
        "./features/payments/services/*"
      ],
      "@features/payments/services/fee-config/*": [
        "./features/payments/services/fee-config/*"
      ],
      "@features/settlements/services/*": [
        "./features/settlements/services/*"
      ],
      "@features/stripe-connect/services/*": [
        "./features/stripe-connect/services/*"
      ],
      "@features/payments/services/webhook/*": [
        "./features/payments/services/webhook/*"
      ],
      "@core/notification/*": [
        "./core/notification/*"
      ],
      "@components/auth": [
        "./features/auth/components/index.ts"
      ],
      "@components/settlement-report": [
        "./features/settlements/components/index.ts"
      ],
      "@/components/auth": [
        "./features/auth/components/index.ts"
      ],
      "@/components/settlement-report": [
        "./features/settlements/components/index.ts"
      ],
      "@/lib/services/payment": [
        "./features/payments/services/index.ts"
      ],
      "@/lib/services/stripe-connect": [
        "./features/stripe-connect/services/index.ts"
      ],
      "@/lib/services/webhook": [
        "./features/payments/services/webhook/index.ts"
      ],
      "@core/notification": [
        "./core/notification/index.ts"
      ],
      "@core/notification/types": [
        "./core/notification/types.ts"
      ],
      "@core/validation/*": [
        "./core/validation/*"
      ],
      "@core/validation/*": [
        "./core/validation/*"
      ],
      "@/types/enums": [
        "./core/types/enums.ts"
      ],
      "@/types/models": [
        "./core/types/models.ts"
      ],
      "@/types/security": [
        "./core/types/security.ts"
      ],
      "@/types/event": [
        "./features/events/types.ts"
      ],
      "@/lib/hooks/*": [
        "./features/auth/hooks/*",
        "./features/events/hooks/*",
        "./core/hooks/*"
      ],
      "@core/hooks/*": [
        "./core/hooks/*"
      ],
      "@features/auth/hooks/*": [
        "./features/auth/hooks/*"
      ],
      "@features/events/hooks/*": [
        "./features/events/hooks/*"
      ],
      "@core/hooks/use-clipboard": [
        "./core/hooks/use-clipboard.ts"
      ],
      "@core/hooks/use-error-handler": [
        "./core/hooks/use-error-handler.ts"
      ],
      "@/hooks/*": [
        "./features/events/hooks/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "supabase/functions/**"
  ],
  "ts-node": {
    "esm": true
  }
}