{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["./core/*"],
      "@features/*": ["./features/*"],
      "@core/hooks/*": ["./core/hooks/*"],
      "@features/auth/hooks/*": ["./features/auth/hooks/*"],
      "@features/events/hooks/*": ["./features/events/hooks/*"],
      "@core/hooks/use-clipboard": ["./core/hooks/use-clipboard.ts"],
      "@core/hooks/use-error-handler": ["./core/hooks/use-error-handler.ts"],
      "@components/*": ["./components/*"],
      "@core/utils": ["./core/utils.ts"],
      "@core/utils/*": ["./core/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types/**/*.ts"],
  "exclude": [
    "node_modules",
    "__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "supabase/functions/**"
  ],
  "ts-node": {
    "esm": true
  }
}
